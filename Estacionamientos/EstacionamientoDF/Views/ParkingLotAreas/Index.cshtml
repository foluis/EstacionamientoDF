@model IEnumerable<EstacionamientoDF.ViewModels.ParkingLotAreaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Parking lot areas</h2>

<div>
    @Html.ActionLink("Add new", "Create")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.First().Slots)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.First().UsedSlots)
        </th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No hay datos.
            </td>
        </tr>
    }
    else
    {
        foreach (var parkingLotArea in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => parkingLotArea.Name)
                </td>
          
                <td>
                    @Html.DisplayFor(modelItem => parkingLotArea.Slots)
                </td>
           
                <td>
                    @Html.DisplayFor(modelItem => parkingLotArea.UsedSlots)
                </td>
            </tr>
        }
    }
</table>